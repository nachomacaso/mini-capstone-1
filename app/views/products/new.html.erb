    <% @product.errors.full_messages.each do |error| %>
      <h3><%= error %></h3>
    <% end %>


    <section>
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <div class="product_single">
            <h1>Create a new nerdy product:</h1>

            <%= form_tag '/products', method: :post do %>

              <div>
                <%= label_tag :name %>
                <%= text_field_tag :name, @product.name %>
              </div>
              
              <div>
                <%= label_tag :price %>
                <%= text_field_tag :price, @product.price %>
              </div>
              
              <div>
                <%= label_tag :image %>
                <%= text_field_tag :image %>
              </div>

              <div>
                <%= label_tag :image_2 %>
                <%= text_field_tag :image_2 %>
              </div>

              
              <div>
                <%= label_tag :description %>
                <%= text_field_tag :description, @product.description %>
              </div>

              <div>
                <%= label_tag :supplier_id %>
                <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name %>
              </div>

              <%= submit_tag "Process New Nerdiness" %>
            <% end %>
          </div>
        </div>
      </div>
    </section>
